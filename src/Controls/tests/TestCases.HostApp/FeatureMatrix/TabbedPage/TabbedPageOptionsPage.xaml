<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Maui.Controls.Sample"
             x:Class="Maui.Controls.Sample.TabbedPageOptionsPage"
             x:DataType="local:TabbedPageViewModel"
             Title="TabbedPage Options">

        <StackLayout Padding="20"
                     Spacing="5">

                <!-- Apply Button -->
                <Button Text="Apply Changes"
                        Clicked="ApplyButton_Clicked"
                        BackgroundColor="Blue"
                        AutomationId="ApplyButton"/>

                <!-- BarBackground Brush  -->
                <Label Text="BarBackground Brush"
                       FontSize="18"
                       FontAttributes="Bold"/>
                <StackLayout Orientation="Horizontal">
                        <Button Text="Gradient"
                                Clicked="BarBackgroundBrushButton_Clicked"
                                BackgroundColor="Violet"
                                TextColor="White"
                                AutomationId="GradientBarBackgroundButton"/>
                        <Button Text="Solid"
                                Clicked="BarBackgroundBrushButton_Clicked"
                                BackgroundColor="Blue"
                                TextColor="White"
                                AutomationId="SolidBarBackgroundButton"/>
                </StackLayout>

                <!-- BarText Color -->
                <Label Text="BarText Color"
                       FontSize="18"
                       FontAttributes="Bold"/>
                <StackLayout Orientation="Horizontal">
                        <Button Text="Black"
                                Clicked="BarTextColorButton_Clicked"
                                BackgroundColor="Black"
                                TextColor="White"
                                AutomationId="BlackBarTextButton"/>
                        <Button Text="Green"
                                Clicked="BarTextColorButton_Clicked"
                                BackgroundColor="Green"
                                TextColor="White"
                                AutomationId="GreenBarTextButton"/>
                </StackLayout>

                <!-- SelectedTab Color -->
                <Label Text="SelectedTab Color"
                       FontSize="18"
                       FontAttributes="Bold"/>
                <StackLayout Orientation="Horizontal">
                        <Button Text="Orange"
                                Clicked="SelectedTabColorButton_Clicked"
                                BackgroundColor="Orange"
                                TextColor="Black"
                                AutomationId="OrangeSelectedButton"/>
                        <Button Text="Purple"
                                Clicked="SelectedTabColorButton_Clicked"
                                BackgroundColor="Purple"
                                TextColor="White"
                                AutomationId="PurpleSelectedButton"/>
                </StackLayout>

                <!-- UnselectedTab Color -->
                <Label Text="UnselectedTab Color"
                       FontSize="18"
                       FontAttributes="Bold"/>
                <StackLayout Orientation="Horizontal">
                        <Button Text="LightGray"
                                Clicked="UnselectedTabColorButton_Clicked"
                                BackgroundColor="LightGray"
                                TextColor="Black"
                                AutomationId="LightGrayUnselectedButton"/>
                        <Button Text="DarkGray"
                                Clicked="UnselectedTabColorButton_Clicked"
                                BackgroundColor="DarkGray"
                                TextColor="White"
                                AutomationId="DarkGrayUnselectedButton"/>
                </StackLayout>

                <!-- IsEnabled -->
                <Label Text="IsEnabled"
                       FontSize="18"
                       FontAttributes="Bold"/>
                <StackLayout Orientation="Horizontal">
                        <RadioButton Content="False"
                                     CheckedChanged="OnIsEnabledChanged"
                                     AutomationId="IsEnabledFalseRadio"/>
                </StackLayout>

                <!-- FlowDirection -->
                <Label Text="FlowDirection"
                       FontSize="18"
                       FontAttributes="Bold"/>
                <StackLayout Orientation="Horizontal">
                        <RadioButton Content="LeftToRight"
                                     CheckedChanged="OnFlowDirectionChanged"
                                     AutomationId="LeftToRightFlowRadio"/>
                        <RadioButton Content="RightToLeft"
                                     CheckedChanged="OnFlowDirectionChanged"
                                     AutomationId="RightToLeftFlowRadio"/>
                </StackLayout>

                <!-- ItemsSource -->
                <Label Text="ItemsSource"
                       FontSize="18"
                       FontAttributes="Bold"/>
                <StackLayout Orientation="Horizontal">
                        <Button Text="ItemsSourceOne"
                                Clicked="ItemsSourceOne_Clicked"
                                BackgroundColor="LightBlue"
                                AutomationId="ItemsSourceOneButton"/>
                        <Button Text="ItemsSourceTwo"
                                Clicked="ItemsSourceTwo_Clicked"
                                BackgroundColor="LightPink"
                                AutomationId="ItemsSourceTwoButton"/>
                </StackLayout>

                <!-- SelectedItem Test -->
                <HorizontalStackLayout>
                        <Label Text="SelectedItem"
                               FontSize="18"
                               FontAttributes="Bold"/>
                        <Button Text="Select Tab"
                                Clicked="SelectItemOneButton_Clicked"
                                BackgroundColor="LightGreen"
                                AutomationId="SelectItemOneButton"/>
                        <Button Text="Deselect Tab"
                                Clicked="SelectItemTwoButton_Clicked"
                                BackgroundColor="LightCoral"
                                AutomationId="SelectItemTwoButton"/>
                </HorizontalStackLayout>

                <!-- ItemTemplate Info -->
                <HorizontalStackLayout>
                        <Label Text="ItemTemplate"
                               FontSize="14"
                               TextColor="Gray"
                               Margin="0,10,0,0"/>
                        <Button Text="Template One"
                                        Clicked="OnTemplateOneClicked"/>
                        <Button Text="Template Two"
                                        Clicked="OnTemplateTwoClicked"/>
                </HorizontalStackLayout>
        </StackLayout>
</ContentPage>