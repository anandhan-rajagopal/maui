<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Maui.Controls.Sample"
             x:Class="Maui.Controls.Sample.TabbedPageControlMainPage"
             x:DataType="local:TabbedPageViewModel"
             Title="TabbedPageFeature">

       <ContentPage.ToolbarItems>
              <ToolbarItem Text="Options"
                           Clicked="NavigateToOptionsPage_Clicked"
                           AutomationId="Options"/>
       </ContentPage.ToolbarItems>

       <Grid RowDefinitions="*, Auto, Auto, Auto"
             ColumnDefinitions="0.5*, 0.5*"
             RowSpacing="10">

              <!-- TabbedPage Control -->
              <TabbedPage Grid.Row="0" 
                          Grid.Column="0" 
                          Grid.ColumnSpan="2"
                          BarBackground="{Binding BarBackground}"
                          BarBackgroundColor="{Binding BarBackgroundColor}"
                          BarTextColor="{Binding BarTextColor}"
                          SelectedTabColor="{Binding SelectedTabColor}"
                          UnselectedTabColor="{Binding UnselectedTabColor}"
                          IsVisible="{Binding IsVisible}"
                          IsEnabled="{Binding IsEnabled}"
                          FlowDirection="{Binding FlowDirection}"
                          AutomationId="TabbedPageControl">

                     <ContentPage Title="Home"
                                  IconImageSource="dotnet_bot.png">
                            <StackLayout Padding="20" BackgroundColor="LightBlue">
                                   <Label Text="Home Page Content"
                                          FontSize="18"
                                          HorizontalOptions="Center"
                                          VerticalOptions="CenterAndExpand"/>
                                   <Label Text="This is the first tab in the TabbedPage"
                                          HorizontalOptions="Center"/>
                            </StackLayout>
                     </ContentPage>

                     <ContentPage Title="Settings"
                                  IconImageSource="dotnet_bot.png">
                            <StackLayout Padding="20" BackgroundColor="LightGreen">
                                   <Label Text="Settings Page Content"
                                          FontSize="18"
                                          HorizontalOptions="Center"
                                          VerticalOptions="CenterAndExpand"/>
                                   <Label Text="This is the second tab in the TabbedPage"
                                          HorizontalOptions="Center"/>
                            </StackLayout>
                     </ContentPage>

                     <ContentPage Title="Profile"
                                  IconImageSource="dotnet_bot.png">
                            <StackLayout Padding="20" BackgroundColor="LightCoral">
                                   <Label Text="Profile Page Content"
                                          FontSize="18"
                                          HorizontalOptions="Center"
                                          VerticalOptions="CenterAndExpand"/>
                                   <Label Text="This is the third tab in the TabbedPage"
                                          HorizontalOptions="Center"/>
                            </StackLayout>
                     </ContentPage>

                     <ContentPage Title="About"
                                  IconImageSource="dotnet_bot.png">
                            <StackLayout Padding="20" BackgroundColor="LightYellow">
                                   <Label Text="About Page Content"
                                          FontSize="18"
                                          HorizontalOptions="Center"
                                          VerticalOptions="CenterAndExpand"/>
                                   <Label Text="This is the fourth tab in the TabbedPage"
                                          HorizontalOptions="Center"/>
                            </StackLayout>
                     </ContentPage>

              </TabbedPage>
       </Grid>
</ContentPage>
