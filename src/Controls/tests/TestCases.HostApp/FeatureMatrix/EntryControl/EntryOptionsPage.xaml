<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Maui.Controls.Sample"
             x:Class="Maui.Controls.Sample.EntryOptionsPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Apply"
                     Clicked="ApplyButton_Clicked"
                     AutomationId="Apply"/>
    </ContentPage.ToolbarItems>
    <Grid Padding="8"
          ColumnDefinitions="*, *"
          RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto"
          ColumnSpacing="8">
        <!-- Left Column: Entry property toggles and settings -->
        <StackLayout Grid.Column="0" Spacing="2">
            <!-- Font Size -->
            <StackLayout Orientation="Vertical">
                <Label Text="Font Size:" FontSize="11"/>
                <Entry x:Name="FontSizeEntry" Text="{Binding FontSize}" TextChanged="FontSizeEntry_TextChanged" AutomationId="FontSizeEntry"/>
            </StackLayout>
            <!-- Horizontal Alignment -->
            <Label Text="Horizontal Alignment:" FontSize="11"/>
            <StackLayout Orientation="Horizontal" Spacing="2">
                <Button Text="Start" AutomationId="HStart" Clicked="HorizontalAlignmentButton_Clicked"/>
                <Button Text="Center" AutomationId="HCenter" Clicked="HorizontalAlignmentButton_Clicked"/>
                <Button Text="End" AutomationId="HEnd" Clicked="HorizontalAlignmentButton_Clicked"/>
            </StackLayout>
            <!-- Vertical Alignment -->
            <Label Text="Vertical Alignment:" FontSize="11"/>
            <StackLayout Orientation="Horizontal" Spacing="2">
                <Button Text="Start" AutomationId="VStart" Clicked="VerticalAlignmentButton_Clicked"/>
                <Button Text="Center" AutomationId="VCenter" Clicked="VerticalAlignmentButton_Clicked"/>
                <Button Text="End" AutomationId="VEnd" Clicked="VerticalAlignmentButton_Clicked"/>
            </StackLayout>
            <!-- IsPassword -->
            <Label Text="IsPassword:" FontSize="11"/>
            <StackLayout Orientation="Horizontal" Spacing="2">
                <RadioButton x:Name="IsPasswordTrue" Content="True" FontSize="11" GroupName="Password" AutomationId="PasswordTrue" CheckedChanged="IsPasswordTrueOrFalse_Clicked"/>
                <RadioButton x:Name="IsPasswordFalse" IsChecked="True" Content="False" FontSize="11" GroupName="Password" AutomationId="PasswordFalse" CheckedChanged="IsPasswordTrueOrFalse_Clicked"/>
            </StackLayout>
            <!-- IsReadOnly -->
            <Label Text="IsReadOnly:" FontSize="11"/>
            <StackLayout Orientation="Horizontal" Spacing="2">
                <RadioButton x:Name="IsReadOnlyTrue" Content="True" FontSize="11" GroupName="ReadOnly" AutomationId="ReadOnlyTrue" CheckedChanged="IsReadOnlyTrueOrFalse_Clicked"/>
                <RadioButton x:Name="IsReadOnlyFalse" IsChecked="True" Content="False" FontSize="11" GroupName="ReadOnly" AutomationId="ReadOnlyFalse" CheckedChanged="IsReadOnlyTrueOrFalse_Clicked"/>
            </StackLayout>
            <!-- IsTextPredictionEnabled -->
            <Label Text="IsTextPredictionEnabled:" FontSize="11"/>
            <StackLayout Orientation="Horizontal" Spacing="2">
                <RadioButton x:Name="IsTextPredictionEnabledTrue" Content="True" FontSize="11" GroupName="TextPrediction" AutomationId="TextPredictionTrue" CheckedChanged="IsTextPredictionEnabledTrueOrFalse_Clicked"/>
                <RadioButton x:Name="IsTextPredictionEnabledFalse" Content="False" IsChecked="True" FontSize="11" GroupName="TextPrediction" AutomationId="TextPredictionFalse" CheckedChanged="IsTextPredictionEnabledTrueOrFalse_Clicked"/>
            </StackLayout>
            <!-- IsSpellCheckEnabled -->
            <Label Text="IsSpellCheckEnabled:" FontSize="11"/>
            <StackLayout Orientation="Horizontal" Spacing="2">
                <RadioButton x:Name="IsSpellCheckEnabledTrue" Content="True" FontSize="11" GroupName="SpellCheck" AutomationId="SpellCheckTrue" CheckedChanged="IsSpellCheckEnabledTrueOrFalse_Clicked"/>
                <RadioButton x:Name="IsSpellCheckEnabledFalse" Content="False" IsChecked="True" FontSize="11" GroupName="SpellCheck" AutomationId="SpellCheckFalse" CheckedChanged="IsSpellCheckEnabledTrueOrFalse_Clicked"/>
            </StackLayout>
            <!-- Flow Direction -->
            <Label Text="Flow Direction:" FontSize="11"/>
            <HorizontalStackLayout Spacing="2">
                <RadioButton x:Name="FlowDirectionLeftToRight" Content="LTR" GroupName="FlowDirection" IsChecked="True" FontSize="11" VerticalOptions="Center" AutomationId="FlowDirectionLeftToRight" CheckedChanged="FlowDirection_CheckedChanged"/>
                <RadioButton x:Name="FlowDirectionRightToLeft" Content="RTL" GroupName="FlowDirection" FontSize="11" VerticalOptions="Center" AutomationId="FlowDirectionRightToLeft" CheckedChanged="FlowDirection_CheckedChanged"/>
            </HorizontalStackLayout>
            <!-- IsVisible -->
            <Label Text="IsVisible:" FontSize="11"/>
            <StackLayout Orientation="Horizontal" Spacing="2">
                <RadioButton x:Name="IsVisibleTrue" Content="True" IsChecked="True" FontSize="11" GroupName="Visible" AutomationId="VisibleTrue" CheckedChanged="IsVisibleTrueOrFalse_Clicked"/>
                <RadioButton x:Name="IsVisibleFalse" Content="False" FontSize="11" GroupName="Visible" AutomationId="VisibleFalse" CheckedChanged="IsVisibleTrueOrFalse_Clicked"/>
            </StackLayout>
            <!-- IsEnabled -->
            <Label Text="IsEnabled:" FontSize="11"/>
            <StackLayout Orientation="Horizontal" Spacing="2">
                <RadioButton x:Name="IsEnabledTrue" Content="True" FontSize="11" IsChecked="True" GroupName="Enabled" AutomationId="EnabledTrue" CheckedChanged="IsEnabledTrueOrFalse_Clicked"/>
                <RadioButton x:Name="IsEnabledFalse" Content="False" FontSize="11" GroupName="Enabled" AutomationId="EnabledFalse" CheckedChanged="IsEnabledTrueOrFalse_Clicked"/>
            </StackLayout>
            <!-- Clear Button Visibility -->
            <Label Text="Clear Button Visibility:" FontSize="11"/>
            <StackLayout Orientation="Horizontal" Spacing="2">
                <RadioButton x:Name="ClearButtonWhileEditing" Content="While Editing" IsChecked="True" FontSize="11" GroupName="ClearButtonVisibility" AutomationId="ClearButtonWhileEditing" CheckedChanged="ClearButtonVisibility_CheckedChanged"/>
                <RadioButton x:Name="ClearButtonNever" Content="Never" FontSize="11" GroupName="ClearButtonVisibility" AutomationId="ClearButtonNever" CheckedChanged="ClearButtonVisibility_CheckedChanged"/>
            </StackLayout>
        </StackLayout>
        <!-- Right Column: Color, spacing, keyboard, and other settings -->
        <StackLayout Grid.Column="1" Padding="2" Spacing="2">
            <!-- Text Color -->
            <Label Text="Text Color:" FontSize="11"/>
            <StackLayout Orientation="Horizontal" Spacing="2">
                <Button Text="Black" BackgroundColor="Black" TextColor="White" AutomationId="TextColorBlack" Clicked="TextColorButton_Clicked"/>
                <Button Text="Red" BackgroundColor="Red" TextColor="White" AutomationId="TextColorRed" Clicked="TextColorButton_Clicked"/>
                <Button Text="Blue" BackgroundColor="Blue" TextColor="White" AutomationId="TextColorBlue" Clicked="TextColorButton_Clicked"/>
            </StackLayout>
            <!-- Placeholder Color -->
            <Label Text="Placeholder Color:" FontSize="11"/>
            <StackLayout Orientation="Horizontal" Spacing="2">
                <Button Text="Grey" BackgroundColor="Grey" TextColor="White" AutomationId="PlaceholderColorGrey" Clicked="PlaceholderColorButton_Clicked"/>
                <Button Text="Red" BackgroundColor="Red" TextColor="White" AutomationId="PlaceholderColorRed" Clicked="PlaceholderColorButton_Clicked"/>
                <Button Text="Blue" BackgroundColor="Blue" TextColor="White" AutomationId="PlaceholderColorBlue" Clicked="PlaceholderColorButton_Clicked"/>
            </StackLayout>
            <!-- Character Spacing -->
            <StackLayout Orientation="Vertical">
                <Label Text="Character Spacing:" FontSize="11"/>
                <Entry x:Name="CharacterSpacingEntry" Text="{Binding CharacterSpacing}" AutomationId="CharacterSpacing" TextChanged="CharacterSpacing_TextChanged"/>
            </StackLayout>
            <!-- ReturnType -->
            <Label Text="ReturnType" FontSize="11"/>
            <StackLayout Orientation="Horizontal" Spacing="2">
                <Button Text="Default" AutomationId="Default" Clicked="ReturnTypeButton_Clicked"/>
                <Button Text="Next" AutomationId="Next" Clicked="ReturnTypeButton_Clicked"/>
                <Button Text="Send" AutomationId="Send" Clicked="ReturnTypeButton_Clicked"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal" Spacing="2">
                <Button Text="Go" AutomationId="Go" Clicked="ReturnTypeButton_Clicked"/>
                <Button Text="Search" AutomationId="Search" Clicked="ReturnTypeButton_Clicked"/>
                <Button Text="Done" AutomationId="Done" Clicked="ReturnTypeButton_Clicked"/>
            </StackLayout>
            <!-- Max Length -->
            <StackLayout Orientation="Vertical">
                <Label Text="Max Length:" FontSize="11"/>
                <Entry x:Name="MaxLengthEntry" Text="{Binding MaxLength}" AutomationId="MaxLength" FontSize="11" TextChanged="MaxLengthButton_Clicked"/>
            </StackLayout>
            <!-- Keyboard -->
            <Label Text="Keyboard:" FontSize="11"/>
            <StackLayout Orientation="Vertical" Spacing="1">
                <StackLayout Orientation="Horizontal" Spacing="2">
                    <Button Text="Default" AutomationId="Default" Clicked="KeyboardButton_Clicked"/>
                    <Button Text="Chat" AutomationId="Chat" Clicked="KeyboardButton_Clicked"/>
                    <Button Text="Url" AutomationId="Url" Clicked="KeyboardButton_Clicked"/>
                </StackLayout>
                <StackLayout Orientation="Horizontal" Spacing="2">
                    <Button Text="Email" AutomationId="Email" Clicked="KeyboardButton_Clicked"/>
                    <Button Text="Numeric" AutomationId="Numeric" Clicked="KeyboardButton_Clicked"/>
                </StackLayout>
                <StackLayout Orientation="Horizontal" Spacing="2">
                    <Button Text="Telephone" AutomationId="Telephone" Clicked="KeyboardButton_Clicked"/>
                    <Button Text="Text" AutomationId="Text" Clicked="KeyboardButton_Clicked"/>
                </StackLayout>
            </StackLayout>
            <!-- Font Family -->
            <StackLayout Orientation="Vertical">
                <Label Text="Font Family:" FontSize="11"/>
                <Entry x:Name="FontFamilyEntry" Text="{Binding FontFamily}" AutomationId="FontFamily" FontSize="11" TextChanged="FontFamilyEntry_TextChanged"/>
            </StackLayout>
            <!-- Placeholder -->
            <StackLayout Orientation="Vertical">
                <Label Text="Placeholder:" FontSize="11"/>
                <Entry x:Name="PlaceholderEntry" Text="{Binding Placeholder}" AutomationId="PlaceholderText" FontSize="11" TextChanged="PlaceholderEntry_TextChanged"/>
            </StackLayout>
        </StackLayout>
    </Grid>
</ContentPage>