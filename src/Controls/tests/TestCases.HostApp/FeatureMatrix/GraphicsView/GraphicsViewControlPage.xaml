<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Maui.Controls.Sample"
             x:Class="Maui.Controls.Sample.GraphicsViewControlPage"
             x:DataType="local:GraphicsViewFeatureMatrixViewModel"
             Title="GraphicsView Feature Matrix">
    <Grid Padding="20"
          RowDefinitions="*, Auto, Auto, Auto"
          ColumnDefinitions="0.5*, 0.5*"
          RowSpacing="10">
        <!-- GraphicsView Control -->
        <GraphicsView x:Name="graphicsView"
                      Drawable="{Binding Drawable}"
                      BackgroundColor="{Binding BackgroundColor}"
                      HeightRequest="200"
                      WidthRequest="200"
                      Grid.ColumnSpan="2"
                      HorizontalOptions="Center"
                      VerticalOptions="Center"
                      IsVisible="{Binding IsVisible}"
                      AutomationId="GraphicsViewControl"/>

        <StackLayout Spacing="10"
                     Padding="10"
                     Grid.Row="3"
                     Grid.ColumnSpan="2">
            <Label Text="GraphicsView Properties"
                   FontAttributes="Bold"
                   FontSize="14"
                   Margin="0,0,0,10"/>
            <StackLayout Orientation="Vertical">
                <StackLayout Orientation="Horizontal">
                    <Label Text="IsVisible"
                           FontAttributes="Bold"
                           Margin="0,15,0,0"/>
                    <Switch IsToggled="{Binding IsVisible}"
                            AutomationId="IsVisibleSwitch"/>
                </StackLayout>
            </StackLayout>
            <!-- BackgroundColor -->
            <Grid ColumnDefinitions="*,0.3*,0.3*,0.3*"
                  ColumnSpacing="15"
                  HorizontalOptions="Start">
                <Label Text="BackgroundColor"
                       FontAttributes="Bold"
                       VerticalOptions="Center"/>
                <Button BackgroundColor="Blue"
                        Grid.Column="1"
                        Command="{Binding SetBackgroundColorCommand}"
                        CommandParameter="Blue"
                        AutomationId="BlueColorButton"/>
                <Button BackgroundColor="Green"
                        Grid.Column="2"
                        Command="{Binding SetBackgroundColorCommand}"
                        CommandParameter="Green"
                        AutomationId="GreenColorButton"/>
                <Button BackgroundColor="Gray"
                        Grid.Column="3"
                        Command="{Binding SetBackgroundColorCommand}"
                        CommandParameter="Default"
                        AutomationId="DefaultColorButton"/>
            </Grid>
            <!-- DrawableType -->
            <Label Text="Drawable Type"
                   FontAttributes="Bold"
                   Margin="0,10,0,0"/>
            <Grid ColumnDefinitions="*,*,*,*,*"
                  ColumnSpacing="10"
                  HorizontalOptions="Start">
                <Button Text="Rectangle"
                        Grid.Column="0"
                        Command="{Binding SetDrawableTypeCommand}"
                        CommandParameter="Rectangle"
                        AutomationId="RectangleButton"/>
                <Button Text="Ellipse"
                        Grid.Column="1"
                        Command="{Binding SetDrawableTypeCommand}"
                        CommandParameter="Ellipse"
                        AutomationId="EllipseButton"/>
                <Button Text="Line"
                        Grid.Column="2"
                        Command="{Binding SetDrawableTypeCommand}"
                        CommandParameter="Line"
                        AutomationId="LineButton"/>
                <Button Text="Triangle"
                        Grid.Column="3"
                        Command="{Binding SetDrawableTypeCommand}"
                        CommandParameter="Triangle"
                        AutomationId="TriangleButton"/>
                <Button Text="Polygon"
                        Grid.Column="4"
                        Command="{Binding SetDrawableTypeCommand}"
                        CommandParameter="Polygon"
                        AutomationId="PolygonButton"/>
            </Grid>
            <Button Text="Reset Changes"
                    Clicked="OnResetClicked"
                    AutomationId="ResetButton"/>
        </StackLayout>
    </Grid>
</ContentPage>
