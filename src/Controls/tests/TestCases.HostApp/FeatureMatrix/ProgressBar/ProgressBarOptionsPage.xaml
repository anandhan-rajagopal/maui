<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Maui.Controls.Sample"
             x:Class="Maui.Controls.Sample.ProgressBarOptionsPage"
             x:DataType="local:ProgressBarViewModel"
             Title="ProgressBarFeature">
       <ContentPage.ToolbarItems>
              <ToolbarItem Text="Apply"
                           Clicked="ApplyButton_Clicked"
                           AutomationId="Apply"/>
       </ContentPage.ToolbarItems>

       <Grid HorizontalOptions="Center"
             ColumnDefinitions="Auto, Auto"
             RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto"
             RowSpacing="10"
             ColumnSpacing="15">

              <!-- Progress -->
              <Label Grid.Row="0"
                     Grid.Column="0"
                     Text="{Binding Progress, StringFormat='Progress: {0:F2}'}"
                     VerticalOptions="Center"/>
              <Entry Grid.Row="0"
                     Grid.Column="1"
                     x:Name="ProgressEntry"
                     AutomationId="ProgressEntry"
                     TextChanged="OnProgressChanged"
                     Keyboard="Numeric"
                     HorizontalOptions="Start"
                     VerticalOptions="Center"
                     WidthRequest="100"/>

              <!-- IsVisible -->
              <Label Grid.Row="1"
                     Grid.Column="0"
                     Text="Is Visible:"
                     VerticalOptions="Center"/>
              <StackLayout Grid.Row="1"
                           Grid.Column="1"
                           Orientation="Horizontal"
                           VerticalOptions="Center">
                     <RadioButton x:Name="IsVisibleTrueRadio"
                                  AutomationId="IsVisibleTrueRadio"
                                  GroupName="IsVisible"
                                  Content="True"
                                  CheckedChanged="OnIsVisibleCheckedChanged"/>
                     <RadioButton x:Name="IsVisibleFalseRadio"
                                  AutomationId="IsVisibleFalseRadio"
                                  GroupName="IsVisible"
                                  Content="False"
                                  CheckedChanged="OnIsVisibleCheckedChanged"/>
              </StackLayout>

              <!-- Flow Direction -->
              <Label Grid.Row="2"
                     Grid.Column="0"
                     Text="Flow Direction:"
                     FontSize="15"
                     VerticalOptions="Center"/>
              <StackLayout Grid.Row="2"
                           Grid.Column="1"
                           Orientation="Horizontal"
                           VerticalOptions="Center">
                     <RadioButton x:Name="FlowDirectionLTR"
                                  AutomationId="FlowDirectionLTR"
                                  GroupName="FlowDirection"
                                  Content="LTR"
                                  CheckedChanged="OnFlowDirectionChanged"/>
                     <RadioButton x:Name="FlowDirectionRTL"
                                  AutomationId="FlowDirectionRTL"
                                  GroupName="FlowDirection"
                                  Content="RTL"
                                  CheckedChanged="OnFlowDirectionChanged"/>
              </StackLayout>

              <!-- Progress Color -->
              <Label Grid.Row="3"
                     Grid.Column="0"
                     Text="Progress Color:"
                     VerticalOptions="Center"/>
              <StackLayout Grid.Row="3"
                           Grid.Column="1"
                           Orientation="Horizontal"
                           Spacing="5"
                           VerticalOptions="Center">
                     <Button Text="Green"
                             BackgroundColor="Green"
                             TextColor="White"
                             Clicked="ProgressColorButton_Clicked"
                             AutomationId="ProgressColorGreenButton"/>
                     <Button Text="Red"
                             BackgroundColor="Red"
                             TextColor="White"
                             Clicked="ProgressColorButton_Clicked"
                             AutomationId="ProgressColorRedButton"/>
              </StackLayout>

              <!-- BackgroundColor -->
              <Label Grid.Row="4"
                     Grid.Column="0"
                     Text="Background Color:"
                     VerticalOptions="Center"/>
              <StackLayout Grid.Row="4"
                           Grid.Column="1"
                           Orientation="Horizontal"
                           Spacing="5"
                           VerticalOptions="Center">
                     <Button Text="Gray"
                             BackgroundColor="Gray"
                             TextColor="White"
                             Clicked="BackgroundColorButton_Clicked"
                             AutomationId="BackgroundColorGrayButton"/>
                     <Button Text="Light Blue"
                             BackgroundColor="LightBlue"
                             TextColor="Black"
                             Clicked="BackgroundColorButton_Clicked"
                             AutomationId="BackgroundColorLightBlueButton"/>
              </StackLayout>

              <!-- Shadow -->
              <Label Grid.Row="5"
                     Grid.Column="0"
                     Text="Shadow:"
                     VerticalOptions="Center"/>
              <StackLayout Grid.Row="5"
                           Grid.Column="1"
                           Orientation="Horizontal"
                           Spacing="5"
                           VerticalOptions="Center">
                     <RadioButton x:Name="ShadowTrueRadio"
                                  AutomationId="ShadowTrueRadio"
                                  GroupName="Shadow"
                                  Content="True"
                                  CheckedChanged="OnShadowCheckedChanged"/>
                     <RadioButton x:Name="ShadowFalseRadio"
                                  AutomationId="ShadowFalseRadio"
                                  GroupName="Shadow"
                                  Content="False"
                                  CheckedChanged="OnShadowCheckedChanged"/>
              </StackLayout>
       </Grid>
</ContentPage>
