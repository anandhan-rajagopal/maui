<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Maui.Controls.Sample"
             x:Class="Maui.Controls.Sample.CollectionViewControlPage"
             Title="CollectionViewControlPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Options"
                     Clicked="NavigateToOptionsPage_Clicked"
                     AutomationId="Options"/>
    </ContentPage.ToolbarItems>
    <VerticalStackLayout Padding="20"
                         Spacing="10"
                         VerticalOptions="Start">
        <CollectionView
            x:Name="collectionView"
            ItemsSource="{Binding ItemsSource}"
            GroupHeaderTemplate="{Binding GroupHeaderTemplate}"
            ItemTemplate="{Binding ItemTemplate}"
            EmptyView="{Binding EmptyView}"
            IsGrouped="{Binding IsGrouped}"
            SelectionMode="{Binding SelectionMode}"
            SelectedItems="{Binding SelectedItems}"
            SelectedItem="{Binding SelectedItem}"
            AutomationId="CollectionViewControl">
        </CollectionView>

        <!-- Display Selected Item -->
        <Label Text="Selected Item:" FontSize="14" FontAttributes="Bold"/>
        <Label Text="{Binding SelectedItemText}" AutomationId="SelectedSingle" FontSize="14" TextColor="Blue"/>

        <!-- Display Selected Items Count -->
        <Label Text="Selected Items Count:" FontSize="14" FontAttributes="Bold"/>
        <Label Text="{Binding SelectedItemsCount}"  AutomationId="SelectedMultiple" FontSize="14" TextColor="Blue"/>

    </VerticalStackLayout>
</ContentPage>