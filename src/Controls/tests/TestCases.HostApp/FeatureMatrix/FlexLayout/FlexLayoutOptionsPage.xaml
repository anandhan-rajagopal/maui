<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Maui.Controls.Sample"
             x:Class="Maui.Controls.Sample.FlexLayoutOptionsPage"
             x:DataType="local:FlexLayoutViewModel"
             Title="OptionsPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Apply"
                     Clicked="ApplyButton_Clicked"
                     AutomationId="Apply"/>
    </ContentPage.ToolbarItems>

    <ScrollView>
        <VerticalStackLayout Spacing="14"
                             Padding="10">
            <!-- AlignContent -->
            <Label Text="AlignContent"/>
            <HorizontalStackLayout>
                <RadioButton GroupName="AlignContent"
                             Content="Stretch"
                             IsChecked="True"
                             AutomationId="AlignContentStretchButton"
                             CheckedChanged="OnAlignContentChanged"/>
                <RadioButton GroupName="AlignContent"
                             Content="Center"
                             AutomationId="AlignContentCenterButton"
                             CheckedChanged="OnAlignContentChanged"/>
                <RadioButton GroupName="AlignContent"
                             Content="Start"
                             AutomationId="AlignContentStartButton"
                             CheckedChanged="OnAlignContentChanged"/>
                <RadioButton GroupName="AlignContent"
                             Content="End"
                             AutomationId="AlignContentEndButton"
                             CheckedChanged="OnAlignContentChanged"/>
            </HorizontalStackLayout>
            <HorizontalStackLayout>
                <RadioButton GroupName="AlignContent"
                             Content="SpaceBetween"
                             AutomationId="AlignContentSpaceBetweenButton"
                             CheckedChanged="OnAlignContentChanged"/>
                <RadioButton GroupName="AlignContent"
                             Content="SpaceAround"
                             AutomationId="AlignContentSpaceAroundButton"
                             CheckedChanged="OnAlignContentChanged"/>
            </HorizontalStackLayout>

            <!-- AlignItems -->
            <Label Text="AlignItems"/>
            <HorizontalStackLayout>
                <RadioButton GroupName="AlignItems"
                             Content="Stretch"
                             IsChecked="True"
                             AutomationId="AlignItemsStretchButton"
                             CheckedChanged="OnAlignItemsChanged"/>
                <RadioButton GroupName="AlignItems"
                             Content="Center"
                             AutomationId="AlignItemsCenterButton"
                             CheckedChanged="OnAlignItemsChanged"/>
                <RadioButton GroupName="AlignItems"
                             Content="Start"
                             AutomationId="AlignItemsStartButton"
                             CheckedChanged="OnAlignItemsChanged"/>
                <RadioButton GroupName="AlignItems"
                             Content="End"
                             AutomationId="AlignItemsEndButton"
                             CheckedChanged="OnAlignItemsChanged"/>
            </HorizontalStackLayout>

            <!-- Direction -->
            <Label Text="Direction"/>
            <HorizontalStackLayout>
                <RadioButton GroupName="Direction"
                             Content="Row"
                             IsChecked="True"
                             AutomationId="DirectionRowButton"
                             CheckedChanged="OnDirectionChanged"/>
                <RadioButton GroupName="Direction"
                             Content="RowReverse"
                             AutomationId="DirectionRowReverseButton"
                             CheckedChanged="OnDirectionChanged"/>
                <RadioButton GroupName="Direction"
                             Content="Column"
                             AutomationId="DirectionColumnButton"
                             CheckedChanged="OnDirectionChanged"/>
                <RadioButton GroupName="Direction"
                             Content="ColumnReverse"
                             AutomationId="DirectionColumnReverseButton"
                             CheckedChanged="OnDirectionChanged"/>
            </HorizontalStackLayout>

            <!-- JustifyContent -->
            <Label Text="JustifyContent"/>
            <HorizontalStackLayout>
                <RadioButton GroupName="JustifyContent"
                             Content="Start"
                             IsChecked="True"
                             AutomationId="JustifyContentStartButton"
                             CheckedChanged="OnJustifyContentChanged"/>
                <RadioButton GroupName="JustifyContent"
                             Content="Center"
                             AutomationId="JustifyContentCenterButton"
                             CheckedChanged="OnJustifyContentChanged"/>
                <RadioButton GroupName="JustifyContent"
                             Content="End"
                             AutomationId="JustifyContentEndButton"
                             CheckedChanged="OnJustifyContentChanged"/>
            </HorizontalStackLayout>
            <HorizontalStackLayout>
                <RadioButton GroupName="JustifyContent"
                             Content="SpaceBetween"
                             AutomationId="JustifyContentSpaceBetweenButton"
                             CheckedChanged="OnJustifyContentChanged"/>
                <RadioButton GroupName="JustifyContent"
                             Content="SpaceAround"
                             AutomationId="JustifyContentSpaceAroundButton"
                             CheckedChanged="OnJustifyContentChanged"/>
                <RadioButton GroupName="JustifyContent"
                             Content="SpaceEvenly"
                             AutomationId="JustifyContentSpaceEvenlyButton"
                             CheckedChanged="OnJustifyContentChanged"/>
            </HorizontalStackLayout>

            <!-- Wrap -->
            <Label Text="Wrap"/>
            <HorizontalStackLayout>
                <RadioButton GroupName="Wrap"
                             Content="NoWrap"
                             IsChecked="True"
                             AutomationId="WrapNoWrapButton"
                             CheckedChanged="OnWrapChanged"/>
                <RadioButton GroupName="Wrap"
                             Content="Wrap"
                             AutomationId="WrapWrapButton"
                             CheckedChanged="OnWrapChanged"/>
                <RadioButton GroupName="Wrap"
                             Content="Reverse"
                             AutomationId="WrapReverseButton"
                             CheckedChanged="OnWrapChanged"/>
            </HorizontalStackLayout>

            <!-- Child1 Properties -->
            <Label Text="Child1 AlignSelf"/>
            <HorizontalStackLayout>
                <RadioButton GroupName="Child1AlignSelf"
                             Content="Auto"
                             IsChecked="True"
                             AutomationId="Child1AlignSelfAutoButton"
                             CheckedChanged="OnChild1AlignSelfChanged"/>
                <RadioButton GroupName="Child1AlignSelf"
                             Content="Center"
                             AutomationId="Child1AlignSelfCenterButton"
                             CheckedChanged="OnChild1AlignSelfChanged"/>
                <RadioButton GroupName="Child1AlignSelf"
                             Content="Start"
                             AutomationId="Child1AlignSelfStartButton"
                             CheckedChanged="OnChild1AlignSelfChanged"/>
                <RadioButton GroupName="Child1AlignSelf"
                             Content="End"
                             AutomationId="Child1AlignSelfEndButton"
                             CheckedChanged="OnChild1AlignSelfChanged"/>
                <RadioButton GroupName="Child1AlignSelf"
                             Content="Stretch"
                             AutomationId="Child1AlignSelfStretchButton"
                             CheckedChanged="OnChild1AlignSelfChanged"/>
            </HorizontalStackLayout>

            <Label Text="Child1 Grow / Shrink / Order"/>
            <HorizontalStackLayout>
                <Entry WidthRequest="60"
                       Keyboard="Numeric"
                       Text="{Binding Child1Grow}"
                       AutomationId="Child1GrowEntry"/>
                <Entry WidthRequest="60"
                       Keyboard="Numeric"
                       Text="{Binding Child1Shrink}"
                       AutomationId="Child1ShrinkEntry"/>
                <Entry WidthRequest="60"
                       Keyboard="Numeric"
                       Text="{Binding Child1Order}"
                       AutomationId="Child1OrderEntry"/>
            </HorizontalStackLayout>

            <Label Text="Child1 Basis"/>
            <HorizontalStackLayout>
                <RadioButton GroupName="Child1Basis"
                             Content="Auto"
                             IsChecked="True"
                             AutomationId="Child1BasisAutoButton"
                             CheckedChanged="OnChild1BasisChanged"/>
                <RadioButton GroupName="Child1Basis"
                             Content="Fixed100"
                             AutomationId="Child1BasisFixed100Button"
                             CheckedChanged="OnChild1BasisChanged"/>
                <RadioButton GroupName="Child1Basis"
                             Content="Percent50"
                             AutomationId="Child1BasisPercent50Button"
                             CheckedChanged="OnChild1BasisChanged"/>
            </HorizontalStackLayout>

            <Label Text="Child1 Position"/>
            <HorizontalStackLayout>
                <RadioButton GroupName="Child1Position"
                             Content="Relative"
                             IsChecked="True"
                             AutomationId="Child1PositionRelativeButton"
                             CheckedChanged="OnChild1PositionChanged"/>
                <RadioButton GroupName="Child1Position"
                             Content="Absolute"
                             AutomationId="Child1PositionAbsoluteButton"
                             CheckedChanged="OnChild1PositionChanged"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
