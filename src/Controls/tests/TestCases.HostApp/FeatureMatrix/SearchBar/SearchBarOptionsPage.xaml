<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.SearchBarOptionsPage"
             Title="OptionsPage">
        <ContentPage.ToolbarItems>
                <ToolbarItem Text="Apply"
                             Clicked="ApplyButton_Clicked"
                             AutomationId="Apply"/>
        </ContentPage.ToolbarItems>

        <ScrollView AutomationId="ScrollView">
                <StackLayout Spacing="10"
                             Padding="10">

                        <!-- Cancel button color -->
                        <HorizontalStackLayout Spacing="3"
                                               Padding="10">
                                <Label Text="Cancel button color:"
                                       FontSize="20"/>
                                <StackLayout Orientation="Horizontal"
                                             Spacing="10">
                                        <Button Text="Red"
                                                BackgroundColor="Red"
                                                TextColor="White"
                                                Clicked="CancelButtonColor_Clicked"
                                                AutomationId="CancelButtonRedColor"/>
                                        <Button Text="Green"
                                                BackgroundColor="Green"
                                                TextColor="White"
                                                Clicked="CancelButtonColor_Clicked"
                                                AutomationId="CancelButtonGreenColor"/>
                                </StackLayout>
                        </HorizontalStackLayout>

                        <!-- Character Spacing -->
                        <HorizontalStackLayout Spacing="3"
                                               Padding="10">
                                <Label Text="Character Spacing:"
                                       FontSize="20"
                                       VerticalOptions="Center"/>
                                <Entry Text="{Binding CharacterSpacing}"
                                       AutomationId="CharacterSpacingEntry"/>
                        </HorizontalStackLayout>

                        <!-- Cursor Position -->
                        <HorizontalStackLayout Spacing="3"
                                               Padding="10">
                                <Label Text="CursorPosition:"
                                       FontSize="20"
                                       VerticalOptions="Center"/>
                                <Entry Text="{Binding CursorPosition}"
                                       AutomationId="CursorPositionEntry"/>
                        </HorizontalStackLayout>

                        <!-- Font Attributes -->
                        <HorizontalStackLayout Spacing="3"
                                               Padding="10">
                                <Label Text="FontAttributes:"
                                       FontSize="20"/>
                                <StackLayout Orientation="Horizontal"
                                             Spacing="10">
                                        <Button Text="Italic"
                                                FontAttributes="Italic"
                                                Clicked="FontAttributes_Clicked"
                                                AutomationId="FontAttributesItalicButton"/>
                                        <Button Text="Bold"
                                                FontAttributes="Bold"
                                                Clicked="FontAttributes_Clicked"
                                                AutomationId="FontAttributesBoldButton"/>
                                </StackLayout>
                        </HorizontalStackLayout>

                        <!-- Font Auto Scaling -->
                        <HorizontalStackLayout Spacing="3"
                                               Padding="10">
                                <Label Text="FontAutoScalingEnabled:"
                                       FontSize="20"/>
                                <StackLayout Orientation="Horizontal"
                                             Spacing="10">
                                        <Button Text="False"
                                                Clicked="FontAutoScalingEnabled_Clicked"
                                                AutomationId="FontAutoScalingEnabledFalseButton"/>
                                        <Button Text="True"
                                                Clicked="FontAutoScalingEnabled_Clicked"
                                                AutomationId="FontAutoScalingEnabledTrueButton"/>
                                </StackLayout>
                        </HorizontalStackLayout>

                        <!-- Font Family -->
                        <HorizontalStackLayout Spacing="3"
                                               Padding="10">
                                <Label Text="FontFamily:"
                                       FontSize="20"/>
                                <StackLayout Orientation="Horizontal"
                                             Spacing="10">
                                        <Button Text="Courier New"
                                                Clicked="FontFamily_Clicked"
                                                AutomationId="FontFamilyCourierNewButton"/>
                                        <Button Text="Times New Roman"
                                                Clicked="FontFamily_Clicked"
                                                AutomationId="FontFamilyTimesNewRomanButton"/>
                                </StackLayout>
                        </HorizontalStackLayout>

                        <!-- Font Size -->
                        <HorizontalStackLayout Spacing="3"
                                               Padding="10">
                                <Label Text="FontSize:"
                                       FontSize="20"
                                       VerticalOptions="Center"/>
                                <Entry Text="{Binding FontSize}"
                                       AutomationId="FontSizeEntry"/>
                        </HorizontalStackLayout>

                        <!-- Horizontal Text Alignment -->
                        <HorizontalStackLayout Spacing="3"
                                               Padding="10">
                                <Label Text="HorizontalTextAlignment:"
                                       FontSize="20"/>
                                <StackLayout Orientation="Horizontal"
                                             Spacing="10">
                                        <Button Text="Center"
                                                Clicked="HorizontalTextAlignment_Clicked"
                                                AutomationId="HorizontalTextAlignmentCenterButton"/>
                                        <Button Text="End"
                                                Clicked="HorizontalTextAlignment_Clicked"
                                                AutomationId="HorizontalTextAlignmentEndButton"/>
                                </StackLayout>
                        </HorizontalStackLayout>

                        <!-- IsReadOnly -->
                        <HorizontalStackLayout Spacing="3"
                                               Padding="10">
                                <Label Text="IsReadOnly:"
                                       FontSize="20"/>
                                <StackLayout Orientation="Horizontal"
                                             Spacing="10">
                                        <Button Text="True"
                                                Clicked="IsReadOnly_Clicked"
                                                AutomationId="IsReadOnlyTrueButton"/>
                                </StackLayout>
                        </HorizontalStackLayout>

                        <!-- IsSpellCheckEnabled -->
                        <HorizontalStackLayout Spacing="3"
                                               Padding="10">
                                <Label Text="IsSpellCheckEnabled:"
                                       FontSize="20"/>
                                <StackLayout Orientation="Horizontal"
                                             Spacing="10">
                                        <Button Text="False"
                                                Clicked="IsSpellCheckEnabled_Clicked"
                                                AutomationId="IsSpellCheckEnabledFalseButton"/>
                                        <Button Text="True"
                                                Clicked="IsSpellCheckEnabled_Clicked"
                                                AutomationId="IsSpellCheckEnabledTrueButton"/>
                                </StackLayout>
                        </HorizontalStackLayout>

                        <!-- IsTextPredictionEnabled -->
                        <HorizontalStackLayout Spacing="3"
                                               Padding="10">
                                <Label Text="IsTextPredictionEnabled:"
                                       FontSize="20"/>
                                <StackLayout Orientation="Horizontal"
                                             Spacing="10">
                                        <Button Text="False"
                                                Clicked="IsTextPredictionEnabled_Clicked"
                                                AutomationId="IsTextPredictionEnabledFalseButton"/>
                                        <Button Text="True"
                                                Clicked="IsTextPredictionEnabled_Clicked"
                                                AutomationId="IsTextPredictionEnabledTrueButton"/>
                                </StackLayout>
                        </HorizontalStackLayout>

                        <!-- MaxLength -->
                        <HorizontalStackLayout Spacing="3"
                                               Padding="10">
                                <Label Text="MaxLength:"
                                       FontSize="20"
                                       VerticalOptions="Center"/>
                                <Entry Text="{Binding MaxLength}"
                                       AutomationId="MaxLengthEntry"/>
                        </HorizontalStackLayout>

                        <!-- Placeholder -->
                        <HorizontalStackLayout Spacing="3"
                                               Padding="10">
                                <Label Text="Placeholder:"
                                       FontSize="20"
                                       VerticalOptions="Center"/>
                                <Entry Text="{Binding Placeholder}"
                                       AutomationId="PlaceholderEntry"/>
                        </HorizontalStackLayout>

                        <!-- Placeholder Color -->
                        <HorizontalStackLayout Spacing="3"
                                               Padding="10">
                                <Label Text="PlaceholderColor:"
                                       FontSize="20"/>
                                <StackLayout Orientation="Horizontal"
                                             Spacing="10">
                                        <Button Text="Red"
                                                BackgroundColor="Red"
                                                TextColor="White"
                                                Clicked="PlaceholderColor_Clicked"
                                                AutomationId="PlaceholderColorRedButton"/>
                                        <Button Text="Green"
                                                BackgroundColor="Green"
                                                TextColor="White"
                                                Clicked="PlaceholderColor_Clicked"
                                                AutomationId="PlaceholderColorGreenButton"/>
                                </StackLayout>
                        </HorizontalStackLayout>

                        <!-- Selection Length -->
                        <HorizontalStackLayout Spacing="3"
                                               Padding="10">
                                <Label Text="SelectionLength:"
                                       FontSize="20"
                                       VerticalOptions="Center"/>
                                <Entry Text="{Binding SelectionLength}"
                                       AutomationId="SelectionLengthEntry"/>
                        </HorizontalStackLayout>

                        <!-- Text -->
                        <HorizontalStackLayout Spacing="3"
                                               Padding="10">
                                <Label Text="Text:"
                                       FontSize="20"
                                       VerticalOptions="Center"/>
                                <Entry Text="{Binding Text}"
                                       AutomationId="TextEntry"/>
                        </HorizontalStackLayout>

                        <!-- Text Color -->
                        <HorizontalStackLayout Spacing="3"
                                               Padding="10">
                                <Label Text="TextColor:"
                                       FontSize="20"/>
                                <StackLayout Orientation="Horizontal"
                                             Spacing="10">
                                        <Button Text="Red"
                                                BackgroundColor="Red"
                                                TextColor="White"
                                                Clicked="TextColor_Clicked"
                                                AutomationId="TextColorRedButton"/>
                                        <Button Text="Green"
                                                BackgroundColor="Green"
                                                TextColor="White"
                                                Clicked="TextColor_Clicked"
                                                AutomationId="TextColorGreenButton"/>
                                </StackLayout>
                        </HorizontalStackLayout>

                        <!-- Text Transform -->
                        <HorizontalStackLayout Spacing="3"
                                               Padding="10">
                                <Label Text="TextTransform:"
                                       FontSize="20"/>
                                <StackLayout Orientation="Horizontal"
                                             Spacing="10">
                                        <Button Text="Lowercase"
                                                TextTransform="Lowercase"
                                                Clicked="TextTransform_Clicked"
                                                AutomationId="TextTransformLowercaseButton"/>
                                        <Button Text="Uppercase"
                                                TextTransform="Uppercase"
                                                Clicked="TextTransform_Clicked"
                                                AutomationId="TextTransformUppercaseButton"/>
                                </StackLayout>
                        </HorizontalStackLayout>

                        <!-- Vertical Text Alignment -->
                        <HorizontalStackLayout Spacing="3"
                                               Padding="10">
                                <Label Text="VerticalTextAlignment:"
                                       FontSize="20"/>
                                <StackLayout Orientation="Horizontal"
                                             Spacing="10">
                                        <Button Text="Center"
                                                Clicked="VerticalTextAlignment_Clicked"
                                                AutomationId="VerticalTextAlignmentCenterButton"/>
                                        <Button Text="End"
                                                Clicked="VerticalTextAlignment_Clicked"
                                                AutomationId="VerticalTextAlignmentEndButton"/>
                                </StackLayout>
                        </HorizontalStackLayout>
                </StackLayout>
        </ScrollView>
</ContentPage>