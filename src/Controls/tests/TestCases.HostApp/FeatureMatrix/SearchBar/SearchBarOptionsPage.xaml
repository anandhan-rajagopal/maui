<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.SearchBarOptionsPage"
             Title="OptionsPage">
       <ContentPage.ToolbarItems>
              <ToolbarItem Text="Apply"
                           Clicked="ApplyButton_Clicked"
                           AutomationId="Apply"/>
       </ContentPage.ToolbarItems>

       <ScrollView AutomationId="ScrollView">
              <Grid ColumnSpacing="0"
                    RowSpacing="1"
                    Padding="1"
                    RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto"
                    ColumnDefinitions="Auto,Auto">

                     <!-- Cancel button color -->

                     <Label Grid.Row="0"
                            Grid.Column="0"
                            Text="Cancel button color:"
                            VerticalOptions="Center"/>
                     <StackLayout Grid.Row="0"
                                  Grid.Column="1"
                                  Orientation="Horizontal"
                                  Spacing="10"
                                  VerticalOptions="Center">
                            <RadioButton GroupName="CancelButtonColor"
                                         AutomationId="CancelButtonRedColor"
                                         CheckedChanged="OnColorsRadioButtonCheckedChanged"
                                         Content="Red"/>

                            <RadioButton GroupName="CancelButtonColor"
                                         AutomationId="CancelButtonGreenColor"
                                         CheckedChanged="OnColorsRadioButtonCheckedChanged"
                                         Content="Green"/>
                     </StackLayout>

                     <!-- Character Spacing -->

                     <Label Grid.Row="1"
                            Grid.Column="0"
                            Text="Character Spacing:"
                            VerticalOptions="Center"/>
                     <Entry Grid.Row="1"
                            Grid.Column="1"
                            AutomationId="CharacterSpacingEntry"
                            HeightRequest="37"
                            HorizontalOptions="Start"
                            Text="{Binding CharacterSpacing}"
                            VerticalOptions="Center"
                            WidthRequest="200"/>


                     <!-- Font Attributes -->

                     <Label Grid.Row="2"
                            Grid.Column="0"
                            Text="FontAttributes:"
                            VerticalOptions="Center"/>
                     <StackLayout Grid.Row="2"
                                  Grid.Column="1"
                                  Orientation="Horizontal"
                                  Spacing="10"
                                  VerticalOptions="Center">
                            <RadioButton GroupName="FontAttributes"
                                         AutomationId="FontAttributesItalicButton"
                                         CheckedChanged="OnFontAttributesRadioButtonCheckedChanged"
                                         Content="Italic"/>

                            <RadioButton GroupName="FontAttributes"
                                         AutomationId="FontAttributesBoldButton"
                                         CheckedChanged="OnFontAttributesRadioButtonCheckedChanged"
                                         Content="Bold"/>

                            <RadioButton GroupName="FontAttributes"
                                         AutomationId="FontAttributesNoneButton"
                                         CheckedChanged="OnFontAttributesRadioButtonCheckedChanged"
                                         Content="None"/>
                     </StackLayout>

                     <!-- Font Family -->

                     <Label Grid.Row="3"
                            Grid.Column="0"
                            Text="FontFamily:"
                            VerticalOptions="Center"/>
                     <StackLayout Grid.Row="3"
                                  Grid.Column="1"
                                  Orientation="Horizontal"
                                  Spacing="1"
                                  VerticalOptions="Center">
                            <RadioButton GroupName="FontFamily"
                                         AutomationId="FontFamilyDokdoButton"
                                         CheckedChanged="OnFontFamilyRadioButtonCheckedChanged"
                                         Content="Dokdo"/>

                            <RadioButton GroupName="FontFamily"
                                         AutomationId="FontFamilyMontserratBoldButton"
                                         CheckedChanged="OnFontFamilyRadioButtonCheckedChanged"
                                         Content="MontserratBold"/>
                     </StackLayout>


                     <!-- Font Size -->

                     <Label Grid.Row="4"
                            Grid.Column="0"
                            Text="FontSize:"
                            VerticalOptions="Center"/>
                     <Entry Grid.Row="4"
                            Grid.Column="1"
                            AutomationId="FontSizeEntry"
                            HeightRequest="37"
                            HorizontalOptions="Start"
                            Text="{Binding FontSize}"
                            VerticalOptions="Center"
                            WidthRequest="200"/>


                     <!-- Horizontal Text Alignment -->

                     <Label Grid.Row="5"
                            Grid.Column="0"
                            Text="HorizontalTextAlignment:"
                            VerticalOptions="Center"/>
                     <StackLayout Grid.Row="5"
                                  Grid.Column="1"
                                  Orientation="Horizontal"
                                  Spacing="10"
                                  VerticalOptions="Center">
                            <RadioButton GroupName="HorizontalTextAlignment"
                                         AutomationId="HorizontalTextAlignmentCenterButton"
                                         CheckedChanged="OnHorizontalTextAlignmentRadioButtonCheckedChanged"
                                         Content="Center"/>

                            <RadioButton GroupName="HorizontalTextAlignment"
                                         AutomationId="HorizontalTextAlignmentEndButton"
                                         CheckedChanged="OnHorizontalTextAlignmentRadioButtonCheckedChanged"
                                         Content="End"/>

                     </StackLayout>

                     <!-- IsReadOnly -->

                     <Label Grid.Row="6"
                            Grid.Column="0"
                            Text="IsReadOnly:"
                            VerticalOptions="Center"/>
                     <StackLayout Grid.Row="6"
                                  Grid.Column="1"
                                  Orientation="Horizontal"
                                  Spacing="10"
                                  VerticalOptions="Center">
                            <RadioButton GroupName="IsReadOnly"
                                         AutomationId="IsReadOnlyFalseButton"
                                         CheckedChanged="OnIsReadOnlyRadioButtonCheckedChanged"
                                         Content="False"/>
                            <RadioButton GroupName="IsReadOnly"
                                         AutomationId="IsReadOnlyTrueButton"
                                         CheckedChanged="OnIsReadOnlyRadioButtonCheckedChanged"
                                         Content="True"/>
                     </StackLayout>

                     <!-- IsSpellCheckEnabled -->

                     <Label Grid.Row="7"
                            Grid.Column="0"
                            Text="IsSpellCheckEnabled:"
                            VerticalOptions="Center"/>
                     <StackLayout Grid.Row="7"
                                  Grid.Column="1"
                                  Orientation="Horizontal"
                                  Spacing="10"
                                  VerticalOptions="Center">
                            <RadioButton GroupName="IsSpellCheckEnabled"
                                         AutomationId="IsSpellCheckEnabledFalseButton"
                                         CheckedChanged="OnIsSpellCheckEnabledRadioButtonCheckedChanged"
                                         Content="False"/>
                            <RadioButton GroupName="IsSpellCheckEnabled"
                                         AutomationId="IsSpellCheckEnabledTrueButton"
                                         CheckedChanged="OnIsSpellCheckEnabledRadioButtonCheckedChanged"
                                         Content="True"/>

                     </StackLayout>

                     <!-- IsTextPredictionEnabled -->

                     <Label Grid.Row="8"
                            Grid.Column="0"
                            Text="IsTextPredictionEnabled:"
                            VerticalOptions="Center"/>
                     <StackLayout Grid.Row="8"
                                  Grid.Column="1"
                                  Orientation="Horizontal"
                                  Spacing="10"
                                  VerticalOptions="Center">
                            <RadioButton GroupName="IsTextPredictionEnabled"
                                         AutomationId="IsTextPredictionEnabledFalseButton"
                                         CheckedChanged="OnIsTextPredictionEnabledRadioButtonCheckedChanged"
                                         Content="False"/>
                            <RadioButton GroupName="IsTextPredictionEnabled"
                                         AutomationId="IsTextPredictionEnabledTrueButton"
                                         CheckedChanged="OnIsTextPredictionEnabledRadioButtonCheckedChanged"
                                         Content="True"/>
                     </StackLayout>

                     <!-- Keyboard -->

                     <Label Grid.Row="9"
                            Grid.Column="0"
                            Text="Keyboard:"/>
                     <VerticalStackLayout Grid.Row="9"
                                          Grid.Column="1"
                                          Spacing="1">
                            <HorizontalStackLayout>
                                   <RadioButton GroupName="Keyboard"
                                                AutomationId="KeyboardChatButton"
                                                CheckedChanged="OnKeyboardRadioButtonCheckedChanged"
                                                Content="Chat"/>
                                   <RadioButton GroupName="Keyboard"
                                                AutomationId="KeyboardDefaultButton"
                                                CheckedChanged="OnKeyboardRadioButtonCheckedChanged"
                                                Content="Default"/>
                                   <RadioButton GroupName="Keyboard"
                                                AutomationId="KeyboardEmailButton"
                                                CheckedChanged="OnKeyboardRadioButtonCheckedChanged"
                                                Content="Email"/>
                            </HorizontalStackLayout>

                            <HorizontalStackLayout>
                                   <RadioButton GroupName="Keyboard"
                                                AutomationId="KeyboardNumericButton"
                                                CheckedChanged="OnKeyboardRadioButtonCheckedChanged"
                                                Content="Numeric"/>
                                   <RadioButton GroupName="Keyboard"
                                                AutomationId="KeyboardPlainButton"
                                                CheckedChanged="OnKeyboardRadioButtonCheckedChanged"
                                                Content="Plain"/>
                                   <RadioButton GroupName="Keyboard"
                                                AutomationId="KeyboardUrlButton"
                                                CheckedChanged="OnKeyboardRadioButtonCheckedChanged"
                                                Content="Url"/>

                            </HorizontalStackLayout>

                            <HorizontalStackLayout>
                                   <RadioButton GroupName="Keyboard"
                                                AutomationId="KeyboardTextButton"
                                                CheckedChanged="OnKeyboardRadioButtonCheckedChanged"
                                                Content="Text"/>
                                   <RadioButton GroupName="Keyboard"
                                                AutomationId="KeyboardTelephoneButton"
                                                CheckedChanged="OnKeyboardRadioButtonCheckedChanged"
                                                Content="Telephone"/>
                            </HorizontalStackLayout>

                     </VerticalStackLayout>

                     <!-- MaxLength -->

                     <HorizontalStackLayout Grid.Row="10"
                                            Grid.Column="0">
                            <Label Text="MaxLength:"
                                   VerticalOptions="Center"/>
                            <Entry AutomationId="MaxLengthEntry"
                                   HeightRequest="37"
                                   Text="{Binding MaxLength}"
                                   VerticalOptions="Center"
                                   WidthRequest="50"/>
                     </HorizontalStackLayout>

                     <!-- Placeholder -->

                     <HorizontalStackLayout Grid.Row="10"
                                            Grid.Column="1"
                                            Padding="10,0,0,0">
                            <Label Text="Placeholder:"
                                   VerticalOptions="Center"/>
                            <Entry AutomationId="PlaceholderEntry"
                                   HeightRequest="37"
                                   Text="{Binding Placeholder}"
                                   VerticalOptions="Center"
                                   WidthRequest="50"/>
                     </HorizontalStackLayout>


                     <!-- Placeholder Color -->

                     <Label Grid.Row="11"
                            Grid.Column="0"
                            Text="PlaceholderColor:"
                            VerticalOptions="Center"/>
                     <StackLayout Grid.Row="11"
                                  Grid.Column="1"
                                  Orientation="Horizontal"
                                  Spacing="10"
                                  VerticalOptions="Center">
                            <RadioButton GroupName="PlaceholderColor"
                                         AutomationId="PlaceholderColorRedButton"
                                         CheckedChanged="OnPlaceholderColorRadioButtonCheckedChanged"
                                         Content="Red"/>

                            <RadioButton GroupName="PlaceholderColor"
                                         AutomationId="PlaceholderColorGreenButton"
                                         CheckedChanged="OnPlaceholderColorRadioButtonCheckedChanged"
                                         Content="Green"/>

                     </StackLayout>

                     <!-- Selection Length -->

                     <HorizontalStackLayout Grid.Row="12"
                                            Grid.Column="0">
                            <Label
                                   Text="SelectionLength:"
                                   VerticalOptions="Center"/>
                            <Entry Grid.Row="12"
                                   Grid.Column="1"
                                   AutomationId="SelectionLengthEntry"
                                   HeightRequest="37"
                                   HorizontalOptions="Start"
                                   Text="{Binding SelectionLength}"
                                   VerticalOptions="Center"
                                   WidthRequest="50"/>
                     </HorizontalStackLayout>


                     <!-- Text -->

                     <HorizontalStackLayout Grid.Row="12"
                                            Grid.Column="1"
                                            Padding="10,0,0,0">
                            <Label Grid.Row="13"
                                   Grid.Column="0"
                                   Text="Text:"
                                   VerticalOptions="Center"/>
                            <Entry Grid.Row="13"
                                   Grid.Column="1"
                                   AutomationId="TextEntry"
                                   HeightRequest="37"
                                   HorizontalOptions="Start"
                                   Text="{Binding Text}"
                                   VerticalOptions="Center"
                                   WidthRequest="50"/>
                     </HorizontalStackLayout>


                     <!-- Text Color -->

                     <Label Grid.Row="13"
                            Grid.Column="0"
                            Text="TextColor:"
                            VerticalOptions="Center"/>
                     <StackLayout Grid.Row="13"
                                  Grid.Column="1"
                                  Orientation="Horizontal"
                                  Spacing="10"
                                  VerticalOptions="Center">
                            <RadioButton GroupName="TextColor"
                                         AutomationId="TextColorRedButton"
                                         CheckedChanged="OnTextColorRadioButtonCheckedChanged"
                                         Content="Red"/>
                            <RadioButton GroupName="TextColor"
                                         AutomationId="TextColorGreenButton"
                                         CheckedChanged="OnTextColorRadioButtonCheckedChanged"
                                         Content="Green"/>
                     </StackLayout>


                     <!-- Text Transform -->

                     <Label Grid.Row="14"
                            Grid.Column="0"
                            Text="TextTransform:"
                            VerticalOptions="Center"/>
                     <StackLayout Grid.Row="14"
                                  Grid.Column="1"
                                  Orientation="Horizontal"
                                  Spacing="10"
                                  VerticalOptions="Center">
                            <RadioButton GroupName="TextTransform"
                                         AutomationId="TextTransformLowercaseButton"
                                         CheckedChanged="OnTextTransformRadioButtonCheckedChanged"
                                         Content="Lowercase"/>
                            <RadioButton GroupName="TextTransform"
                                         AutomationId="TextTransformUppercaseButton"
                                         CheckedChanged="OnTextTransformRadioButtonCheckedChanged"
                                         Content="Uppercase"/>
                     </StackLayout>


                     <!-- Vertical Text Alignment -->

                     <Label Grid.Row="15"
                            Grid.Column="0"
                            Text="VerticalTextAlignment:"
                            VerticalOptions="Center"/>
                     <StackLayout Grid.Row="15"
                                  Grid.Column="1"
                                  Orientation="Horizontal"
                                  Spacing="10"
                                  VerticalOptions="Center">
                            <RadioButton GroupName="VerticalTextAlignment"
                                         AutomationId="VerticalTextAlignmentCenterButton"
                                         CheckedChanged="OnVerticalTextAlignmentRadioButtonCheckedChanged"
                                         Content="Center"/>
                            <RadioButton GroupName="VerticalTextAlignment"
                                         AutomationId="VerticalTextAlignmentEndButton"
                                         CheckedChanged="OnVerticalTextAlignmentRadioButtonCheckedChanged"
                                         Content="End"/>
                     </StackLayout>

              </Grid>
       </ScrollView>
</ContentPage>