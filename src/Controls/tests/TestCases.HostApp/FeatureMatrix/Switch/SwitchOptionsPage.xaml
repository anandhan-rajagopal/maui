<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Maui.Controls.Sample"
             x:Class="Maui.Controls.Sample.SwitchOptionsPage"
             x:DataType="local:SwitchViewModel"
             Title="SwitchOptionsPage">
       <ContentPage.ToolbarItems>
              <ToolbarItem Text="Apply"
                           Clicked="ApplyButton_Clicked"
                           AutomationId="Apply"/>
       </ContentPage.ToolbarItems>

       <Grid ColumnSpacing="0"
             RowSpacing="1"
             RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto"
             ColumnDefinitions="Auto,Auto"
             HorizontalOptions="Center"
             VerticalOptions="Center">

              <!-- BackgroundColor -->
              <Label Grid.Row="0"
                     Grid.Column="0"
                     Text="BackgroundColor:"
                     VerticalOptions="Center"/>
              <StackLayout Grid.Row="0"
                           Grid.Column="1"
                           Orientation="Horizontal"
                           Spacing="10"
                           VerticalOptions="Center">
                     <RadioButton GroupName="BackgroundColor"
                                  AutomationId="BackgroundColorBlueButton"
                                  Content="Blue"
                                  CheckedChanged="OnBackgroundColorRadioButtonCheckedChanged"/>
                     <RadioButton GroupName="BackgroundColor"
                                  AutomationId="BackgroundColorOrangeButton"
                                  Content="Orange"
                                  CheckedChanged="OnBackgroundColorRadioButtonCheckedChanged"/>
              </StackLayout>

              <!-- FlowDirection -->
              <Label Grid.Row="1"
                     Grid.Column="0"
                     Text="FlowDirection:"
                     VerticalOptions="Center"/>
              <StackLayout Grid.Row="1"
                           Grid.Column="1"
                           Orientation="Horizontal"
                           Spacing="10"
                           VerticalOptions="Center">
                     <RadioButton GroupName="FlowDirection"
                                  AutomationId="FlowDirectionLeftToRightButton"
                                  Content="LeftToRight"
                                  CheckedChanged="OnFlowDirectionRadioButtonCheckedChanged"/>
                     <RadioButton GroupName="FlowDirection"
                                  AutomationId="FlowDirectionRightToLeftButton"
                                  Content="RightToLeft"
                                  CheckedChanged="OnFlowDirectionRadioButtonCheckedChanged"/>
              </StackLayout>

              <!-- IsEnabled -->
              <Label Grid.Row="2"
                     Grid.Column="0"
                     Text="IsEnabled:"
                     VerticalOptions="Center"/>
              <StackLayout Grid.Row="2"
                           Grid.Column="1"
                           Orientation="Horizontal"
                           Spacing="10"
                           VerticalOptions="Center">
                     <RadioButton GroupName="IsEnabled"
                                  AutomationId="IsEnabledTrueButton"
                                  Content="True"
                                  CheckedChanged="OnEnabledRadioButtonCheckedChanged"/>
                     <RadioButton GroupName="IsEnabled"
                                  AutomationId="IsEnabledFalseButton"
                                  Content="False"
                                  CheckedChanged="OnEnabledRadioButtonCheckedChanged"/>
              </StackLayout>

              <!-- IsVisible -->
              <Label Grid.Row="3"
                     Grid.Column="0"
                     Text="IsVisible:"
                     VerticalOptions="Center"/>
              <StackLayout Grid.Row="3"
                           Grid.Column="1"
                           Orientation="Horizontal"
                           Spacing="10"
                           VerticalOptions="Center">
                     <RadioButton GroupName="IsVisible"
                                  AutomationId="IsVisibleTrueButton"
                                  Content="True"
                                  CheckedChanged="OnVisibleRadioButtonCheckedChanged"/>
                     <RadioButton GroupName="IsVisible"
                                  AutomationId="IsVisibleFalseButton"
                                  Content="False"
                                  CheckedChanged="OnVisibleRadioButtonCheckedChanged"/>
              </StackLayout>

              <!-- IsToggled -->
              <Label Grid.Row="4"
                     Grid.Column="0"
                     Text="IsToggled:"
                     VerticalOptions="Center"/>
              <StackLayout Grid.Row="4"
                           Grid.Column="1"
                           Orientation="Horizontal"
                           Spacing="10"
                           VerticalOptions="Center">
                     <RadioButton GroupName="IsToggled"
                                  AutomationId="IsToggledTrueButton"
                                  Content="True"
                                  CheckedChanged="OnToggledRadioButtonCheckedChanged"/>

                     <RadioButton GroupName="IsToggled"
                                  AutomationId="IsToggledFalseButton"
                                  Content="False"
                                  CheckedChanged="OnToggledRadioButtonCheckedChanged"/>
              </StackLayout>

              <!-- OnColor -->
              <Label Grid.Row="5"
                     Grid.Column="0"
                     Text="OnColor:"
                     VerticalOptions="Center"/>
              <StackLayout Grid.Row="5"
                           Grid.Column="1"
                           Orientation="Horizontal"
                           Spacing="10"
                           VerticalOptions="Center">
                     <RadioButton GroupName="OnColor"
                                  AutomationId="OnColorRedButton"
                                  Content="Red"
                                  CheckedChanged="OnOnColorRadioButtonCheckedChanged"/>

                     <RadioButton GroupName="OnColor"
                                  AutomationId="OnColorGreenButton"
                                  Content="Green"
                                  CheckedChanged="OnOnColorRadioButtonCheckedChanged"/>
              </StackLayout>

              <!-- Shadow -->
              <Label Grid.Row="6"
                     Grid.Column="0"
                     Text="Shadow:"
                     VerticalOptions="Center"/>
              <HorizontalStackLayout Grid.Row="6"
                                     Grid.Column="1"
                                     VerticalOptions="Center">
                     <RadioButton GroupName="Shadow"
                                  AutomationId="ShadowTrueButton"
                                  Content="True"
                                  CheckedChanged="OnShadowRadioButtonCheckedChanged"
                                  Value="1"/>
                     <RadioButton GroupName="Shadow"
                                  AutomationId="ShadowFalseButton"
                                  Content="False"
                                  CheckedChanged="OnShadowRadioButtonCheckedChanged"
                                  Value="0"/>
              </HorizontalStackLayout>

              <!-- ThumbColor -->
              <Label Grid.Row="7"
                     Grid.Column="0"
                     Text="ThumbColor:"
                     VerticalOptions="Center"/>
              <StackLayout Grid.Row="7"
                           Grid.Column="1"
                           Orientation="Horizontal"
                           Spacing="10"
                           VerticalOptions="Center">
                     <RadioButton GroupName="ThumbColor"
                                  AutomationId="ThumbColorRedButton"
                                  Content="Red"
                                  CheckedChanged="OnThumbColorRadioButtonCheckedChanged"/>

                     <RadioButton GroupName="ThumbColor"
                                  AutomationId="ThumbColorGreenButton"
                                  Content="Green"
                                  CheckedChanged="OnThumbColorRadioButtonCheckedChanged"/>
              </StackLayout>
       </Grid>
</ContentPage>