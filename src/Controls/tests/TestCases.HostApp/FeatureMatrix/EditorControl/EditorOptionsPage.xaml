<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Maui.Controls.Sample"
             x:Class="Maui.Controls.Sample.EditorOptionsPage"
             Title="Editor Options">

  <ContentPage.ToolbarItems>
    <ToolbarItem Text="Apply"
                 Clicked="ApplyButton_Clicked"
                 AutomationId="Apply"/>
  </ContentPage.ToolbarItems>

  <ScrollView Padding="10">
    <Grid ColumnDefinitions="Auto, *"
          RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto"
          RowSpacing="10"
          ColumnSpacing="15">
      
      <!-- Text -->
      <Label Grid.Row="0"
             Grid.Column="0"
             Text="Text:"
             FontSize="15"
             VerticalTextAlignment="Center"/>
      <Entry Grid.Row="0"
             Grid.Column="1"
             x:Name="TextEntry"
             AutomationId="TextEntry"
             TextChanged="OnTextChanged"
             HorizontalOptions="Start"
             WidthRequest="200"/>

      <!-- Character Spacing -->
      <Label Grid.Row="1"
             Grid.Column="0"
             Text="Character Spacing:"
             FontSize="15"
             VerticalTextAlignment="Center"/>
      <Entry Grid.Row="1"
             Grid.Column="1"
             x:Name="CharacterSpacingEntry"
             AutomationId="CharacterSpacingEntry"
             TextChanged="OnCharacterSpacingChanged"
             Keyboard="Numeric"
             HorizontalOptions="Start"
             WidthRequest="100"/>

      <!-- Font Attributes -->
      <Label Grid.Row="2"
             Grid.Column="0"
             Text="Font Attributes:"
             FontSize="15"
             VerticalTextAlignment="Center"/>
      <StackLayout Grid.Row="2"
                   Grid.Column="1"
                   Orientation="Horizontal"
                   Spacing="10">
        <RadioButton x:Name="FontAttributesNoneRadio"
                     AutomationId="FontAttributesNoneRadio"
                     GroupName="FontAttributes"
                     Content="None"
                     IsChecked="True"
                     FontSize="14"
                     CheckedChanged="OnFontAttributesCheckedChanged"/>
        <RadioButton x:Name="FontAttributesBoldRadio"
                     AutomationId="FontAttributesBoldRadio"
                     GroupName="FontAttributes"
                     Content="Bold"
                     FontSize="14"
                     CheckedChanged="OnFontAttributesCheckedChanged"/>
        <RadioButton x:Name="FontAttributesItalicRadio"
                     AutomationId="FontAttributesItalicRadio"
                     GroupName="FontAttributes"
                     Content="Italic"
                     FontSize="14"
                     CheckedChanged="OnFontAttributesCheckedChanged"/>
      </StackLayout>

      <!-- Font Family -->
      <Label Grid.Row="3"
             Grid.Column="0"
             Text="Font Family:"
             FontSize="15"
             VerticalTextAlignment="Center"/>
      <Entry Grid.Row="3"
             Grid.Column="1"
             x:Name="FontFamilyEntry"
             AutomationId="FontFamilyEntry"
             TextChanged="OnFontFamilyChanged"
             HorizontalOptions="Start"
             WidthRequest="150"/>

      <!-- Font Size -->
      <Label Grid.Row="4"
             Grid.Column="0"
             Text="Font Size:"
             FontSize="15"
             VerticalTextAlignment="Center"/>
      <Entry Grid.Row="4"
             Grid.Column="1"
             x:Name="FontSizeEntry"
             AutomationId="FontSizeEntry"
             TextChanged="OnFontSizeChanged"
             Keyboard="Numeric"
             HorizontalOptions="Start"
             WidthRequest="100"/>

      <!-- Text Color -->
      <Label Grid.Row="5"
             Grid.Column="0"
             Text="Text Color:"
             FontSize="15"
             VerticalTextAlignment="Center"/>
      <StackLayout Grid.Row="5"
                   Grid.Column="1"
                   Orientation="Horizontal"
                   Spacing="10">
        <RadioButton x:Name="TextColorBlackRadio"
                     AutomationId="TextColorBlackRadio"
                     GroupName="TextColor"
                     Content="Black"
                     IsChecked="True"
                     FontSize="14"
                     CheckedChanged="OnTextColorCheckedChanged"/>
        <RadioButton x:Name="TextColorRedRadio"
                     AutomationId="TextColorRedRadio"
                     GroupName="TextColor"
                     Content="Red"
                     FontSize="14"
                     CheckedChanged="OnTextColorCheckedChanged"/>
        <RadioButton x:Name="TextColorBlueRadio"
                     AutomationId="TextColorBlueRadio"
                     GroupName="TextColor"
                     Content="Blue"
                     FontSize="14"
                     CheckedChanged="OnTextColorCheckedChanged"/>
      </StackLayout>

      <!-- Placeholder -->
      <Label Grid.Row="6"
             Grid.Column="0"
             Text="Placeholder:"
             FontSize="15"
             VerticalTextAlignment="Center"/>
      <Entry Grid.Row="6"
             Grid.Column="1"
             x:Name="PlaceholderEntry"
             AutomationId="PlaceholderEntry"
             TextChanged="OnPlaceholderChanged"
             HorizontalOptions="Start"
             WidthRequest="200"/>

      <!-- Placeholder Color -->
      <Label Grid.Row="7"
             Grid.Column="0"
             Text="Placeholder Color:"
             FontSize="15"
             VerticalTextAlignment="Center"/>
      <StackLayout Grid.Row="7"
                   Grid.Column="1"
                   Orientation="Horizontal"
                   Spacing="10">
        <RadioButton x:Name="PlaceholderColorGrayRadio"
                     AutomationId="PlaceholderColorGrayRadio"
                     GroupName="PlaceholderColor"
                     Content="Gray"
                     IsChecked="True"
                     FontSize="14"
                     CheckedChanged="OnPlaceholderColorCheckedChanged"/>
        <RadioButton x:Name="PlaceholderColorRedRadio"
                     AutomationId="PlaceholderColorRedRadio"
                     GroupName="PlaceholderColor"
                     Content="Red"
                     FontSize="14"
                     CheckedChanged="OnPlaceholderColorCheckedChanged"/>
        <RadioButton x:Name="PlaceholderColorBlueRadio"
                     AutomationId="PlaceholderColorBlueRadio"
                     GroupName="PlaceholderColor"
                     Content="Blue"
                     FontSize="14"
                     CheckedChanged="OnPlaceholderColorCheckedChanged"/>
      </StackLayout>

      <!-- Max Length -->
      <Label Grid.Row="8"
             Grid.Column="0"
             Text="Max Length:"
             FontSize="15"
             VerticalTextAlignment="Center"/>
      <Entry Grid.Row="8"
             Grid.Column="1"
             x:Name="MaxLengthEntry"
             AutomationId="MaxLengthEntry"
             TextChanged="OnMaxLengthChanged"
             Keyboard="Numeric"
             HorizontalOptions="Start"
             WidthRequest="100"/>

      <!-- Is ReadOnly -->
      <Label Grid.Row="9"
             Grid.Column="0"
             Text="Is ReadOnly:"
             FontSize="15"
             VerticalTextAlignment="Center"/>
      <StackLayout Grid.Row="9"
                   Grid.Column="1"
                   Orientation="Horizontal"
                   Spacing="10">
        <RadioButton x:Name="IsReadOnlyFalseRadio"
                     AutomationId="IsReadOnlyFalseRadio"
                     GroupName="IsReadOnly"
                     Content="False"
                     IsChecked="True"
                     FontSize="14"
                     CheckedChanged="OnIsReadOnlyCheckedChanged"/>
        <RadioButton x:Name="IsReadOnlyTrueRadio"
                     AutomationId="IsReadOnlyTrueRadio"
                     GroupName="IsReadOnly"
                     Content="True"
                     FontSize="14"
                     CheckedChanged="OnIsReadOnlyCheckedChanged"/>
      </StackLayout>

      <!-- Is Text Prediction Enabled -->
      <Label Grid.Row="10"
             Grid.Column="0"
             Text="Is Text Prediction Enabled:"
             FontSize="15"
             VerticalTextAlignment="Center"/>
      <StackLayout Grid.Row="10"
                   Grid.Column="1"
                   Orientation="Horizontal"
                   Spacing="10">
        <RadioButton x:Name="IsTextPredictionEnabledTrueRadio"
                     AutomationId="IsTextPredictionEnabledTrueRadio"
                     GroupName="IsTextPredictionEnabled"
                     Content="True"
                     IsChecked="True"
                     FontSize="14"
                     CheckedChanged="OnIsTextPredictionEnabledCheckedChanged"/>
        <RadioButton x:Name="IsTextPredictionEnabledFalseRadio"
                     AutomationId="IsTextPredictionEnabledFalseRadio"
                     GroupName="IsTextPredictionEnabled"
                     Content="False"
                     FontSize="14"
                     CheckedChanged="OnIsTextPredictionEnabledCheckedChanged"/>
      </StackLayout>

      <!-- Keyboard -->
      <Label Grid.Row="11"
             Grid.Column="0"
             Text="Keyboard:"
             FontSize="15"
             VerticalTextAlignment="Center"/>
      <StackLayout Grid.Row="11"
                   Grid.Column="1"
                   Orientation="Horizontal"
                   Spacing="10">
        <RadioButton x:Name="KeyboardDefaultRadio"
                     AutomationId="KeyboardDefaultRadio"
                     GroupName="Keyboard"
                     Content="Default"
                     IsChecked="True"
                     FontSize="14"
                     CheckedChanged="OnKeyboardCheckedChanged"/>
        <RadioButton x:Name="KeyboardEmailRadio"
                     AutomationId="KeyboardEmailRadio"
                     GroupName="Keyboard"
                     Content="Email"
                     FontSize="14"
                     CheckedChanged="OnKeyboardCheckedChanged"/>
        <RadioButton x:Name="KeyboardNumericRadio"
                     AutomationId="KeyboardNumericRadio"
                     GroupName="Keyboard"
                     Content="Numeric"
                     FontSize="14"
                     CheckedChanged="OnKeyboardCheckedChanged"/>
      </StackLayout>

      <!-- AutoSize -->
      <Label Grid.Row="12"
             Grid.Column="0"
             Text="AutoSize:"
             FontSize="15"
             VerticalTextAlignment="Center"/>
      <StackLayout Grid.Row="12"
                   Grid.Column="1"
                   Orientation="Horizontal"
                   Spacing="10">
        <RadioButton x:Name="AutoSizeDisabledRadio"
                     AutomationId="AutoSizeDisabledRadio"
                     GroupName="AutoSize"
                     Content="Disabled"
                     IsChecked="True"
                     FontSize="14"
                     CheckedChanged="OnAutoSizeCheckedChanged"/>
        <RadioButton x:Name="AutoSizeTextChangesRadio"
                     AutomationId="AutoSizeTextChangesRadio"
                     GroupName="AutoSize"
                     Content="TextChanges"
                     FontSize="14"
                     CheckedChanged="OnAutoSizeCheckedChanged"/>
      </StackLayout>

      <!-- Is Enabled -->
      <Label Grid.Row="13"
             Grid.Column="0"
             Text="Is Enabled:"
             FontSize="15"
             VerticalTextAlignment="Center"/>
      <StackLayout Grid.Row="13"
                   Grid.Column="1"
                   Orientation="Horizontal"
                   Spacing="10">
        <RadioButton x:Name="IsEnabledTrueRadio"
                     AutomationId="IsEnabledTrueRadio"
                     GroupName="IsEnabled"
                     Content="True"
                     IsChecked="True"
                     FontSize="14"
                     CheckedChanged="OnIsEnabledCheckedChanged"/>
        <RadioButton x:Name="IsEnabledFalseRadio"
                     AutomationId="IsEnabledFalseRadio"
                     GroupName="IsEnabled"
                     Content="False"
                     FontSize="14"
                     CheckedChanged="OnIsEnabledCheckedChanged"/>
      </StackLayout>

      <!-- Is Visible -->
      <Label Grid.Row="14"
             Grid.Column="0"
             Text="Is Visible:"
             FontSize="15"
             VerticalTextAlignment="Center"/>
      <StackLayout Grid.Row="14"
                   Grid.Column="1"
                   Orientation="Horizontal"
                   Spacing="10">
        <RadioButton x:Name="IsVisibleTrueRadio"
                     AutomationId="IsVisibleTrueRadio"
                     GroupName="IsVisible"
                     Content="True"
                     IsChecked="True"
                     FontSize="14"
                     CheckedChanged="OnIsVisibleCheckedChanged"/>
        <RadioButton x:Name="IsVisibleFalseRadio"
                     AutomationId="IsVisibleFalseRadio"
                     GroupName="IsVisible"
                     Content="False"
                     FontSize="14"
                     CheckedChanged="OnIsVisibleCheckedChanged"/>
      </StackLayout>

      <!-- Flow Direction -->
      <Label Grid.Row="15"
             Grid.Column="0"
             Text="Flow Direction:"
             FontSize="15"
             VerticalTextAlignment="Center"/>
      <StackLayout Grid.Row="15"
                   Grid.Column="1"
                   Orientation="Horizontal"
                   Spacing="10">
        <RadioButton x:Name="FlowDirectionLTRRadio"
                     AutomationId="FlowDirectionLTRRadio"
                     GroupName="FlowDirection"
                     Content="LeftToRight"
                     IsChecked="True"
                     FontSize="14"
                     CheckedChanged="OnFlowDirectionChanged"/>
        <RadioButton x:Name="FlowDirectionRTLRadio"
                     AutomationId="FlowDirectionRTLRadio"
                     GroupName="FlowDirection"
                     Content="RightToLeft"
                     FontSize="14"
                     CheckedChanged="OnFlowDirectionChanged"/>
      </StackLayout>
    </Grid>
  </ScrollView>
</ContentPage>