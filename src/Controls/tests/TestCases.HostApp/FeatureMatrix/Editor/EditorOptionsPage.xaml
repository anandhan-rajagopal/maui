<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.EditorOptionsPage"
             Title="EditorOptionsPage">
       <ContentPage.ToolbarItems>
              <ToolbarItem Text="Apply"
                           AutomationId="Apply"
                           Clicked="ApplyButton_Clicked"/>
       </ContentPage.ToolbarItems>
       <Grid ColumnSpacing="3"
             RowSpacing="10"
             Padding="1"
             RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto"
             ColumnDefinitions="Auto,Auto"
             HorizontalOptions="Center">

              <!-- CharacterSpacing -->
              <Label Grid.Row="0"
                     Grid.Column="0"
                     Text="CharacterSpacing:"
                     VerticalOptions="Center"/>
              <Entry Grid.Row="0"
                     Grid.Column="1"
                     AutomationId="CharacterSpacingEntry"
                     Text="{Binding CharacterSpacing}"
                     VerticalOptions="Center"/>

              <!-- Font Attributes -->

              <Label Grid.Row="1"
                     Grid.Column="0"
                     Text="FontAttributes:"
                     VerticalOptions="Center"/>
              <HorizontalStackLayout Grid.Row="1"
                                     Grid.Column="1"
                                     VerticalOptions="Center">
                     <RadioButton GroupName="FontAttributes"
                                  AutomationId="FontAttributesItalicButton"
                                  Content="Italic"
                                  CheckedChanged="OnFontAttributesRadioButtonCheckedChanged"/>

                     <RadioButton GroupName="FontAttributes"
                                  AutomationId="FontAttributesBoldButton"
                                  Content="Bold"
                                  CheckedChanged="OnFontAttributesRadioButtonCheckedChanged"/>

                     <RadioButton GroupName="FontAttributes"
                                  AutomationId="FontAttributesNoneButton"
                                  Content="None"
                                  CheckedChanged="OnFontAttributesRadioButtonCheckedChanged"/>
              </HorizontalStackLayout>

              <!-- Font Family -->

              <Label Grid.Row="2"
                     Grid.Column="0"
                     Text="FontFamily:"
                     VerticalOptions="Center"/>
              <HorizontalStackLayout Grid.Row="2"
                                     Grid.Column="1"
                                     VerticalOptions="Center">
                     <RadioButton GroupName="FontFamily"
                                  AutomationId="FontFamilyCourierNewButton"
                                  Content="CourierNew"
                                  CheckedChanged="OnFontFamilyRadioButtonCheckedChanged"/>

                     <RadioButton GroupName="FontFamily"
                                  AutomationId="FontFamilyTimesNewRomanButton"
                                  Content="TimesNewRoman"
                                  CheckedChanged="OnFontFamilyRadioButtonCheckedChanged"/>
              </HorizontalStackLayout>


              <!-- Font Size -->

              <Label Grid.Row="3"
                     Grid.Column="0"
                     Text="FontSize:"
                     VerticalOptions="Center"/>
              <Entry Grid.Row="3"
                     Grid.Column="1"
                     AutomationId="FontSizeEntry"
                     Text="{Binding FontSize}"
                     VerticalOptions="Center"/>

              <!-- MaxLength -->

              <Label Grid.Row="4"
                     Grid.Column="0"
                     Text="MaxLength:"
                     VerticalOptions="Center"/>
              <Entry Grid.Row="4"
                     Grid.Column="1"
                     AutomationId="MaxLengthEntry"
                     Text="{Binding MaxLength}"
                     VerticalOptions="Center"/>

              <!-- Placeholder -->

              <Label Grid.Row="5"
                     Grid.Column="0"
                     Text="Placeholder:"
                     VerticalOptions="Center"/>
              <Entry Grid.Row="5"
                     Grid.Column="1"
                     AutomationId="PlaceholderEntry"
                     Text="{Binding Placeholder}"
                     VerticalOptions="Center"/>


              <!-- Placeholder Color -->

              <Label Grid.Row="6"
                     Grid.Column="0"
                     Text="PlaceholderColor:"
                     VerticalOptions="Center"/>
              <StackLayout Grid.Row="6"
                           Grid.Column="1"
                           Orientation="Horizontal"
                           Spacing="10"
                           VerticalOptions="Center">
                     <RadioButton GroupName="PlaceholderColor"
                                  AutomationId="PlaceholderColorRedButton"
                                  Content="Red"
                                  CheckedChanged="OnPlaceholderColorRadioButtonCheckedChanged"/>

                     <RadioButton GroupName="PlaceholderColor"
                                  AutomationId="PlaceholderColorGreenButton"
                                  Content="Green"
                                  CheckedChanged="OnPlaceholderColorRadioButtonCheckedChanged"/>

              </StackLayout>

              <!-- Text -->

              <Label Grid.Row="7"
                     Grid.Column="0"
                     Text="Text:"
                     VerticalOptions="Center"/>
              <Entry Grid.Row="7"
                     Grid.Column="1"
                     AutomationId="TextEntry"
                     Text="{Binding Text}"
                     VerticalOptions="Center"/>


              <!-- Text Color -->

              <Label Grid.Row="8"
                     Grid.Column="0"
                     Text="TextColor:"
                     VerticalOptions="Center"/>
              <StackLayout Grid.Row="8"
                           Grid.Column="1"
                           Orientation="Horizontal"
                           Spacing="10"
                           VerticalOptions="Center">
                     <RadioButton GroupName="TextColor"
                                  AutomationId="TextColorRedButton"
                                  Content="Red"
                                  CheckedChanged="OnTextColorRadioButtonCheckedChanged"/>

                     <RadioButton GroupName="TextColor"
                                  AutomationId="TextColorGreenButton"
                                  Content="Green"
                                  CheckedChanged="OnTextColorRadioButtonCheckedChanged"/>

              </StackLayout>


              <!-- Text Transform -->

              <Label Grid.Row="9"
                     Grid.Column="0"
                     Text="TextTransform:"
                     VerticalOptions="Center"/>
              <StackLayout Grid.Row="9"
                           Grid.Column="1"
                           Orientation="Horizontal"
                           Spacing="10"
                           VerticalOptions="Center">
                     <RadioButton GroupName="TextTransform"
                                  AutomationId="TextTransformLowercaseButton"
                                  Content="Lowercase"
                                  CheckedChanged="OnTextTransformRadioButtonCheckedChanged"/>

                     <RadioButton GroupName="TextTransform"
                                  AutomationId="TextTransformUppercaseButton"
                                  Content="Uppercase"
                                  CheckedChanged="OnTextTransformRadioButtonCheckedChanged"/>

              </StackLayout>


       </Grid>
</ContentPage>